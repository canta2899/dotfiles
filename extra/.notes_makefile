DIRNAME := pdfs

MDFOLDER = ./

MARKDOWNS := $(wildcard $(MDFOLDER)/*.md)

# PDFS=$(MARKDOWNS:.md=.pdf)

SOURCES := $(patsubst %.md,%.pdf,$(subst $(MDFOLDER),$(DIRNAME),$(MARKDOWNS)))

$(DIRNAME)/%.pdf: $(MDFOLDER)/%.md
	@echo "Building $@..."
	@pandoc -f markdown-implicit_figures $^ -o $@

.PHONY : all

all: $(SOURCES)
